  <script>
    async function updateDashboard() {
      try {
        const resUser = await fetch("https://server.duinocoin.com/users/YourUsername"); // change â€YourUsernameâ€
        const dataUser = await resUser.json();
        const r = dataUser.result.balance;

        document.getElementById("username").textContent = r.username;
        document.getElementById("balance").textContent = r.balance.toFixed(4) + " DUCO";
        document.getElementById("created").textContent = r.created;
        document.getElementById("last_login").textContent = new Date(r.last_login * 1000).toLocaleString();
        document.getElementById("max_miners").textContent = r.max_miners;
        document.getElementById("stake_amount").textContent = r.stake_amount + " DUCO";
        document.getElementById("trust_score").textContent = r.trust_score;
        document.getElementById("verified").textContent = r.verified === "yes" ? "âœ… Yes" : "âŒ No";
        document.getElementById("verified_by").textContent = r.verified_by;
        document.getElementById("warnings").textContent = r.warnings;
        document.getElementById("server").textContent = dataUser.server;
        document.getElementById("status").innerHTML = dataUser.success ? "ðŸŸ¢ Online" : "ðŸ”´ Offline";
        document.getElementById("last_update").textContent = new Date().toLocaleTimeString();
        document.title = `Duino Dashboard - ${r.username} (${r.balance.toFixed(2)} DUCO)`;

        const resMiners = await fetch("https://server.duinocoin.com/miners/YourUsername"); // change â€YourUsernameâ€ 
        const dataMiners = await resMiners.json();
        const minersContainer = document.getElementById("active_miners");
        minersContainer.innerHTML = "";
        let totalHashrate = 0;

        if (dataMiners.result && dataMiners.result.length > 0) {
          dataMiners.result.forEach((miner, index) => {
            const col = document.createElement("div");
            col.className = "column is-one-quarter";
            col.innerHTML = `
              <div class="box glow" style="animation-delay:${index * 0.1}s;">
                <p class="heading">${miner.identifier}</p>
                <p class="hashrate">${miner.hashrate} H/s</p>
              </div>`;
            minersContainer.appendChild(col);
            
            // SumÄƒm hashrate-ul total
            totalHashrate += miner.hashrate;
          });
          // AfiÈ™Äƒm totalul hashrate-ului
          document.getElementById("total_hashrate").textContent = totalHashrate + " H/s";
        } else {
          minersContainer.innerHTML = "<p class='muted1'>Nu sunt mineri activi</p>";
          document.getElementById("total_hashrate").textContent = "0 H/s";
        }

      } catch (err) {
        console.error("Eroare la preluarea datelor:", err);
        document.getElementById("status").innerHTML = "ðŸ”´ Connection error!";
      }
    }

    updateDashboard();
    setInterval(updateDashboard, 60000);
  </script>
